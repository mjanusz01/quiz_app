<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:contentDescription="quiz-logo"
        android:src="@drawable/main_logo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:orientation="vertical"
        android:paddingLeft="100px"
        android:paddingTop="50px"
        android:paddingRight="100px"
        android:paddingBottom="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.095"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/summary_number_of_questions_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20px"
            android:text="ILOŚĆ PYTAN"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/summary_number_of_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20px"
            android:textStyle="bold"
            android:text="19"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/summary_good_answers_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20px"
            android:text="ILOSC DOBRYCH ODPOWIEDZI"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/summary_good_answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20px"
            android:textStyle="bold"
            android:text="11"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/summary_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20px"
            android:text="CZAS"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/summary_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20px"
            android:textStyle="bold"
            android:text="23.9s"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/summary_points_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50px"
            android:text="PUNKTY"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/summary_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20px"
            android:textStyle="bold"
            android:text="1594"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/summary_backToMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="backToLogin"
            android:padding="50px"
            android:text="POWRÓT DO MENU"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>